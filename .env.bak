# 应用调试模式
APP_DEBUG=true

# 应用名称
APP_NAME=api

# 应用密钥（用于加密等）
APP_KEY=base64:your-base64-encoded-key-here

# 默认时区
APP_TIMEZONE=Asia/Shanghai

# 默认语言包
APP_LANG=zh-cn

# 日志记录级别（debug/info/notice/warning/error/critical/alert/emergency）
LOG_LEVEL=debug

# 日志类型（file/socket）
LOG_TYPE=file

# 数据库连接类型（mysql, sqlite, pgsql 等）
DB_TYPE=mysql

# 数据库主机地址
DB_HOST=127.0.0.1

# 数据库端口
DB_PORT=3306

# 数据库名
DB_DATABASE=api

# 数据库用户名
DB_USERNAME=root

# 数据库密码
DB_PASSWORD=123456

# 数据库编码
DB_CHARSET=utf8mb4

# 是否开启严格模式
DB_DEBUG=false

# 缓存驱动（file, redis, memcached）
CACHE_TYPE=redis

# Redis 主机地址（如果使用 Redis）
REDIS_HOST=127.0.0.1

# Redis 端口
REDIS_PORT=6379

# Redis 密码（如无则留空）
REDIS_PASSWORD=

# Session 驱动（file, redis, database）
SESSION_DRIVER=redis

# Cookie 生命周期（单位：分钟）
COOKIE_LIFETIME=1440

# 文件上传路径（相对于 public 目录）
UPLOAD_PATH=uploads/

# API 请求前缀（如 /api）
#API_PREFIX=/api

# JWT 秘钥（用于 Token 生成）
JWT_SECRET=your_jwt_secret_key_here

# 是否启用多应用模式
MULTI_APP=true

# 默认应用名（如 admin, index）
DEFAULT_APP=web

# 路由模式（route, pathinfo）
URL_MODEL=route

# URL 伪静态后缀
URL_HTML_SUFFIX=.html

# 是否启用路由缓存
ROUTE_CACHE=true

# 模板引擎类型（think 或 blade）
#TPL_ENGINE=think

# 是否启用模板编译缓存
#TPL_COMPILE_CACHE=true

# 邮件发送配置（如需使用）
#MAIL_MAILER=smtp
#MAIL_HOST=smtp.example.com
#MAIL_PORT=587
#MAIL_USERNAME=your@example.com
#MAIL_PASSWORD=your-email-password
#MAIL_ENCRYPTION=tls
#MAIL_FROM_ADDRESS=noreply@example.com
#MAIL_FROM_NAME="Your App"
